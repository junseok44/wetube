extends layouts/main

block content 
    .form-container
        form(action=`/videos${routes.upload}`, method="post")
            label(for="videofile") ChooseFile
            input(type="file", id="videofile",name="videoFile", accept="video/*", enctype="multipart/form-data")
            input(type="text", placeholder="title", name="title",required="true")
            input(type="text", placeholder="description", name="description",required="true")
            input(type="submit", value="Upload video")
        p #{routes.upload}